# Parser for ordinals.

import 'universal_rules.grm' as universal_rules;
import 'universal_func.grm' as universal_func;

ordinal_prefix = "kaping";

export ORDINAL_MARKUP = Optimize[
    universal_func.InvertMarkup[universal_rules.ordinal]
    universal_rules.ins_space
    universal_func.InvertMarkup[universal_rules.opening_brace]
    universal_rules.ins_space
    universal_func.InvertMarkup[universal_rules.ordinal_integer]
    universal_rules.ins_space
    universal_rules.ins_quote
    (ordinal_prefix : "")
    universal_rules.del_space_star
    ("0" : "")?    # Single digit numbers could be prefixed with 0. e.g: 04th
    universal_rules.CARDINAL
    universal_rules.ins_quote
    universal_rules.ins_space
    universal_func.InvertMarkup[universal_rules.closing_brace]
];
